<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sih">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MIC"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sih"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sih"
        android:supportsRtl="true"
        android:theme="@style/AllStyle">
        <activity android:name=".SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Speech_activity" >

        </activity>
        <activity android:name=".IntroActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".DISPLAY_ACTIVITY"
            android:theme="@style/notitle"
            android:parentActivityName=".Speech_activity">

        </activity>
        <activity android:name=".Sign">

        </activity>
    </application>

</manifest>